<% include ../partials/header %>
  <div class="all-forms">
    <h1>Edit <%=currentUser.firstname%>'s Profile Page</h1>

    <div class="form-wrapper">

      <form action="/profile/<%=currentUser._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="username">Edit Username:</label>
          <input class="form-control" type="text" name="username" value="<%=currentUser.username%>">
        </div>

        <div class="form-group">
          <label for="avatar">Change Avatar image:</label>
          <input class="form-control" type="text" name="avatar" value="<%=currentUser.avatar%>">
        </div>

        <div class="form-group">
          <label for="firstname">Change First Name:</label>
          <input class="form-control" type="text" name="firstname" value="<%=currentUser.firstname%>">
        </div>

        <div class="form-group">
          <label for="lastname">Change Last Name:</label>
          <input class="form-control" type="text" name="lastname" value="<%=currentUser.lastname%>">
        </div>

        <div class="form-group">
          <label for="email">Change Email Address:</label>
          <input class="form-control" type="email" name="email" value="<%=currentUser.email%>">
        </div>

        <div class="form-group">
          <button class="btn btn-success btn-block" type="submit" name="button">submit</button>
          <a class="btn btn-danger btn-block" href="/profile/<%=currentUser._id%>">Cancel</a>
        </div>
      </form>

    </div>
  </div>
<% include ../partials/footer %>
