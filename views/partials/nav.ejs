<% if (typeof navPage === 'undefined'){navPage=''}%>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Yelp <span class="glyphicon glyphicon-tent"></span> Camp </a>
    </div>
    <!-- ./navbar header for brand and toggle -->

    <div class="collapse navbar-collapse" id="bs-collapse-nav">
        <ul class="nav navbar-nav">
          <li class="<%=navPage.home || ''%>"><a href="/campgrounds">Home</a></li>
        </ul>
        <!-- left nav -->
        <ul class="nav navbar-nav navbar-right">

          <% if(currentUser){ %>
            <li class="<%=navPage.profile || ''%>">
              <a href="/profile/<%=currentUser.id%>">signed in as <%=currentUser.username%></a>
              <% if (currentUser.isAdmin) {%>
                <span>(admin)</span>
              <% } %>
            </li>
            <li><a href="/profile/logout">Logout</a></li>
          <%  } else { %>
            <li class="<%=navPage.login || ''%>"><a href="/profile">Login</a></li>
            <li class="<%=navPage.signup || ''%>"><a href="/profile/new">Sign Up</a></li>
          <% } %>

        </ul>
        <!-- ./right nav -->
    </div>
    <!-- ./collapse nav -->
  </div>
  <!-- ./container -->
</nav>
