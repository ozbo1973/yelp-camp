<% include ../partials/header %>
  <div class="all-forms">
    <h1>Create New Campground Page</h1>

    <div class="form-wrapper">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <label for="camp[name]">Enter Camp Name:</label>
          <input class="form-control" type="text" name="camp[name]" placeholder="Name" required>
        </div>

        <div class="form-group">
          <label for="camp[img]">Enter Camp Picture:</label>
          <input class="form-control" type="text" name="camp[img]" placeholder="Image" required>
        </div>

        <div class="form-group">
          <label for="camp[price]">Enter Camp Price per Night:</label>
          <input class="form-control" type="number" name="camp[price]" placeholder="Price/Night" min=".01" step=".01" required>
        </div>

        <div class="form-group">
          <label for="camp[location]">Location</label>
          <input class="form-control" type="text" name="camp[location]" id="location" placeholder="Yosemite National Park, CA">
        </div>

        <div class="form-group">
          <label for="camp[description]">Enter Camp Description:</label>
          <input class="form-control" type="text" name="camp[description]" placeholder="Description">
        </div>

        <div class="form-group">
          <button class="btn btn-block btn-success" type="submit" name="button">Add Camp</button>
          <a class="btn btn-block btn-danger" href="/campgrounds">Cancel</a>
        </div>

      </form>

    </div>
  </div>
<% include ../partials/footer %>
